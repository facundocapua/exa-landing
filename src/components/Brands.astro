---
// Define the brands array with their names and file paths
const brands = [
  { name: 'Framar', image: '/brands/framar.bin' },
  { name: 'Framesi', image: '/brands/framesi.bin' },
  { name: 'Kerastase', image: '/brands/kerastase.bin' },
  { name: 'L\'Or√©al', image: '/brands/loreal.bin' },
];
---

<section class="py-16">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Nuestras Marcas</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 items-center justify-items-center">
      {brands.map((brand) => (
        <div class="text-center transition-transform duration-500 ease-in-out hover:scale-105">
          <img src={brand.image} alt={`Logo ${brand.name}`} loading="lazy" class="max-w-full h-auto mb-2" />
        </div>
      ))}
    </div>
  </div>
</section>